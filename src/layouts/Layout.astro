---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<!-- No mover aqui jeje -->
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	:root {
		--accent: 136, 58, 234;
		--blanco-uno: 255, 220, 240;
		--verde-code: 0, 240, 0;
		--blanco-low: 255, 224, 247;
		--negro: 0, 0, 0;
		/*--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);*/
	}
	html {
		font-family: system-ui, sans-serif;
		background: #5f95c2;
		background-size: 224px;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
</style>
